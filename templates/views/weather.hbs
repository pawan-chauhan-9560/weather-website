<!DOCTYPE html>
<html lang="en">

<head>
    {{>headLinks}}
</head>

<body>
    {{>navbar}}
    <!-- Header -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10   col-12 mx-auto">
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id='cityName' placeholder="Enter Your City Name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>
                <div class="tempInfo">
                    <div class="top_layer">
                        <p id="day">Monday</p>
                        <p id="todayDate">21 Dec</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get Output Here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id='temp_real_val'>0</span> <sup>o</sup>C</p>
                            <p id="temp_status"><i class='fa fa-cloud' aria-hidden="true"></i> </p>
                        </div>

                    </div>
                </div>
            </div>

        </div>


    </div>

    {{>footer}}
    <script src="js/main.js"></script>
    <script>

        const getCurDay = () => {
            let weekday = [
                "Sunday",
                "Monday",
                "Tuesday",
                "Wednesday",
                "Thursday",
                "Friday",
                "Saturday",
            ];

            let curDay = new Date();
            //current day
            let days = weekday[curDay.getDay()];
            let day = document.getElementById('day');
            //Current date

            day.innerText = days;

        };
        getCurDay();
        const getCurDate = () => {
            var months = [
                "January",
                "February",
                "March",
                "April",
                "May",
                "June",
                "July",
                "August",
                "September",
                "October",
                "November",
                "December",
            ];

            let curDate = new Date();
            let month = months[curDate.getMonth()];
            let date = curDate.getDate()
            let todayDate = document.getElementById('todayDate');
            todayDate.innerText = `${date}|${month}`;
        }
        getCurDate();
    </script>
</body>

</html>